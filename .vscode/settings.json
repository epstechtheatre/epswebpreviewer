{
    "json.schemas": [
        {
            "schema": {
                "title": "Configuration Options",
                "type": "object",
                "properties": {
                    "linkToDomain": {
                        "type": "string",
                        "description": "The public domain that generated sites will point to. This is only used in comment url link generation.",
                        "pattern": "^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9\\-]*[A-Za-z0-9])$"
        
                    },
                    "internalIPOverride": {
                        "type": "string",
                        "description": "Override the Private IP the script uses. On startup, the script will try to automatically detect what this IP is but can be explicitly set here.",
                        "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)(\\.|$)){4}$"
                    },
                    "maxConsecutive": {
                        "type": "integer",
                        "description": "The maximum number of consecutive preview instances allowed to be open at 1 time. Set to 0 for no limit. Max 1000 (though I STRONGLY suggest you don't use that)",
                        "default": 10,
                        "minimum": 0,
                        "maximum": 1000
                    },
                    "minPort": {
                        "type": "integer",
                        "description": "The start of the port range to open web previews on.",
                        "minimum": 0,
                        "maximum": 65535
                    },
                    "maxPort": {
                        "type": "integer",
                        "description": "The end of the port range to open web previews on. Must be greater than the min port",
                        "maximum": 65535,
                        "minimum": 0
                    },
                    "instanceOpenHours": {
                        "type": "integer",
                        "description": "The number of hours to keep instances open",
                        "default": 6,
                        "minimum": 1
                    },
                    "webhookPort": {
                        "type": "integer",
                        "description": "The port for incoming webhook requests",
                        "default": 9193,
                        "minimum": 1,
                        "maximum": 65535
                    },
                    "lang": {
                        "type": "string",
                        "default": "english",
                        "description": "The language comments are sent in",
                    }
                },
                "required": [
                    "linkToDomain",
                    "minPort",
                    "maxPort",
                    "maxConsecutive",
                    "instanceOpenHours",
                    "webhookPort",
                    "lang"
                ],
                "additionalProperties": false
            },
            "fileMatch": [
                "/**/*config.json",
                "!tsconfig.json",
                "!jsconfig.json"
            ]
        },
        {
            "schema": {
                "title": "Auth Options",
                "type": "object",
                "properties": {
                    "githubToken": {
                        "type": "string",
                        "description": "Github account auth token"
                    },
                    "webhookSecret": {
                        "type": "string",
                        "description": "Secret for webhook authentication"
                    },
                },
                "required": [
                    "githubToken",
                    "webhookSecret"
                ],
                "additionalProperties": false
            },
            "fileMatch": [
                "/**/*auth.json"
            ]
        }
    ],
    "cSpell.words": [
        "PRID",
        "octokit"
    ]
}